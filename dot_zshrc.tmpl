### CLEANUP HANDLER ZSH KUBESWITCH

trap kubeswitchCleanupHandler EXIT

function kubeswitchCleanupHandler {
   if [ ! -z "$KUBECONFIG"  ]
      then
            switchTmpDirectory="$HOME/.kube/.switch_tmp/config"
                if [[ $KUBECONFIG == *"$switchTmpDirectory"*  ]]; then
                        rm $KUBECONFIG
                            fi
                             fi
                             
}

